<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFrameworks>net8.0;net472</TargetFrameworks>
    <LangVersion>11.0</LangVersion>
    <Product>DotMake Command-Line TestApp.NugetDI</Product>

    <!-- Generated files output path, excluding from compile and cleaning before build, are all handled in Directory.Build.targets  -->
    <EmitCompilerGeneratedFiles>false</EmitCompilerGeneratedFiles>
      
    <RestoreSources>../DotMake.CommandLine/bin/$(Configuration)/$(RestoreSources)</RestoreSources>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Tenekon.DotMake.CommandLine" Version="$(Version)" />
    <PackageReference Include="Microsoft.Extensions.DependencyInjection" Version="6.0.0" />
  </ItemGroup>

</Project>
